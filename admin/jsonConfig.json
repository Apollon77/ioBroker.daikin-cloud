{
    "type": "panel",
    "i18n": true,
    "items": {
        "_authinfo": {
            "type": "header",
            "size": 4,
            "style": {
                "marginTop": 20
            },
            "sm": 12,
            "text": "auth_header"
        },
        "_auth1": {
            "newLine":  true,
            "type": "staticText",
            "text": "auth_step1"
        },
        "_auth2": {
            "newLine":  true,
            "type": "staticText",
            "text": "auth_step2"
        },
        "_authlink": {
            "newLine":  true,
            "type": "staticLink",
            "text": "auth_link",
            "href": "https://developer.cloud.daikineurope.com/"
        },
        "_auth3": {
            "newLine":  true,
            "type": "staticText",
            "text": "auth_step3"
        },
        "clientId": {
            "type": "text",
            "newLine": true,
            "label": "ClientID",
            "help": "Daikin Developer Account Client ID",
            "sm": 6,
            "lg": 3
        },
        "clientSecret": {
            "type": "password",
            "repeat": false,
            "help": "Daikin Developer Account Client Secret",
            "label": "ClientSecret",
            "sm": 6,
            "lg": 3
        },
        "_auth4":{
            "newLine": true,
            "variant": "contained",
            "color": "primary",
            "disabled": "!_alive",
            "type": "sendTo",
            "label": "auth_step4",
            "icon": "info",
            "command": "getRedirectBaseUrl",
            "jsonData": "{ \"clientId\": \"${data.clientId}\",\"clientSecret\": \"${data.clientSecret}\",\"redirectUriBase\": \"${data._origin}\" }"
        },
        "_auth5": {
            "newLine":  true,
            "type": "staticText",
            "text": "auth_step5"
        },
        "_auth6": {
            "newLine":  true,
            "type": "staticText",
            "text": "auth_step6"
        },
        "_authenticate": {
            "newLine": true,
            "variant": "contained",
            "color": "primary",
            "disabled": "!_alive",
            "type": "sendTo",
            "error": {
                "connect timeout": "Connection timeout"
            },
            "icon": "auth",
            "command": "getOAuthStartLink",
            "jsonData": "{ \"clientId\": \"${data.clientId}\",\"clientSecret\": \"${data.clientSecret}\",\"redirectUriBase\": \"${data._origin}\" }",
            "label": "auth_step7",
            "openUrl": true,
            "window": "Login with Daikin Cloud"
        },
        "_auth8": {
            "newLine":  true,
            "type": "staticText",
            "text": "auth_step8"
        },
        "_pollingIntervalsHeader": {
            "type": "header",
            "newLine":  true,
            "size": 4,
            "style": {
                "marginTop": 20
            },
            "sm": 12,
            "text": "polling_header"
        },
        "_poplling8": {
            "newLine":  true,
            "type": "staticText",
            "text": "polling_info"
        },
        "pollingInterval": {
            "newLine": true,
            "type": "number",
            "label": "polling_interval",
            "sm": 6,
            "lg": 3,
            "min": 300
        },
        "slowPollingInterval": {
            "newLine": true,
            "type": "number",
            "label": "polling_interval_slow",
            "sm": 6,
            "lg": 3,
            "min": 300
        }
    }
}
